generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Book {
  id          String   @id @default(cuid())
  title       String
  author      String
  coverImage  String // URL or path to the stored image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isConfirmed Boolean  @default(false)
  modelUsed   String // Which AI model was used for recognition
  confidence  Float? // Confidence score from the AI model (if available)
}
